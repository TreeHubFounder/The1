
# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/treehub"

# NextAuth Configuration
NEXTAUTH_URL="https://treehub.app"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# Application Configuration
NODE_ENV="production"
NEXT_PUBLIC_APP_URL="https://treehub.app"
NEXT_PUBLIC_DOMAIN="treehub.app"

# Security & Analytics
GOOGLE_SITE_VERIFICATION="your-google-verification-code"

# AI & External Services
ABACUSAI_API_KEY="your-abacus-ai-api-key"

# Email Configuration (if needed)
SMTP_HOST="smtp.treehub.app"
SMTP_PORT="587"
SMTP_USER="noreply@treehub.app"
SMTP_PASS="your-smtp-password"

# Rate Limiting & Security
RATE_LIMIT_WINDOW="900000"  # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"

# Monitoring & Logging
LOG_LEVEL="error"
ENABLE_ANALYTICS="true"

# Feature Flags
ENABLE_MARKET_CONQUEST="true"
ENABLE_AI_AGENTS="true"
ENABLE_WEATHER_MONITORING="true"
